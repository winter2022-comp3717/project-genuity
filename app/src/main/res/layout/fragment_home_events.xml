<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_event_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/custom_blue_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:contentDescription="@string/image_events_description"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/home_event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/dummyText_fields"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/custom_orange"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/home_event_host"
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/dummyText_fields"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/custom_orange_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/home_event_datetime"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/dummyText_fields"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/custom_orange_light" />

                <TextView
                    android:id="@+id/home_event_description"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/dummyText_fields"
                    android:textColor="@color/custom_orange"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/textView_homeEvents_registeredDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:text="@string/homeEvents_capacity" />

                <TextView
                    android:id="@+id/textView_homeEvents_currRegistered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/dummyText_fields" />

                <TextView
                    android:id="@+id/textView_homeEvents_seperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/homeEvents_seperator" />

                <TextView
                    android:id="@+id/textView_homeEvents_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="5dp"
                    android:text="@string/dummyText_fields" />
            </LinearLayout>

            <!-- Buttons -->

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>