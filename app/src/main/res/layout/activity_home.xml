<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:text="Genuity"
            android:textColor="@color/custom_purple"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_account_home"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            app:icon="@drawable/ic_account"
            app:iconGravity="textEnd"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_greeting_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee"
        android:text="@string/authentication_login_greeting"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView_description_home"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/abeezee"
        android:text="@string/homepage_description"
        android:textSize="20sp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2_events_home"
        android:layout_width="match_parent"
        android:layout_height="421dp"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/button_search_home"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/custom_orange_light"
        android:text="@string/searchButton_text"
        android:textAllCaps="false"
        android:textColor="@color/custom_white"
        android:textSize="16sp"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconTint="@color/custom_white"
        tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>